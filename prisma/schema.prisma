  one_hint    NBAGrid[]    @relation("one_hint")
  two_hint    NBAGrid[]    @relation("two_hint")
  three_hint  NBAGrid[]    @relation("three_hint")
  hint_one    NBAAnswers[] @relation("hint_one_answer")
  hint_two    NBAAnswers[] @relation("hint_two_answer")
